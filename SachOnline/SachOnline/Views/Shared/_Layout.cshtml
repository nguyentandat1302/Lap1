<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/Content/Site.css" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</head>
<body>


    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">

                <a class="navbar-brand" href="~/SachOnline/Index">SachOnline</a>
            </div>
            <div class="col">
                <ul class="nav navbar-nav">
                    <li><a href="~/SachOnline/Index">Trang Chủ</a></li>
                </ul>
                <ul class="nav navbar-nav">
                    <li><a href="#">Giới Thiệu</a></li>
                </ul>
                <ul class="nav navbar-nav">
                    <li><a href="#">Liện Hệ</a></li>
                </ul>
            </div>

            <div class="col">
                <u class=" nav navbar-nav">
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">Sách Theo Chủ Đề <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            @Html.Action("ChuDePartial", "SachOnline")
                        </ul>
                    </li>
                </u>
            </div>
            <div class="col">
                <u class=" nav navbar-nav">
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">Sách Theo Nhà Xuất Bản <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            @Html.Action("NhaXuatBanPartial", "SachOnline")

                        </ul>
                    </li>
                </u>
            </div>


            <form class="navbar-form navbar-left" action="/action_page.php">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Search" name="search">
                </div>
                <button style="background-color:limegreen" type="submit" class="btn btn-default">Submit</button>
            </form>
            @if (Session["TaiKhoan"] != null)
            {

                <ul class="nav navbar-nav navbar-right">
                    <li><a href="@Url.Action("Index", "GioHang")"><span class=" fade-in-left-button glyphicon glyphicon-shopping-cart"></span></a></li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="@Url.Action("DangXuat", "User")"><span class=" fade-in-left-button glyphicon glyphicon-log-out"></span> Đăng Xuất</a></li>
                </ul>


            }
            else
            {
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="@Url.Action("Index", "GioHang")"><span class=" fade-in-left-button glyphicon glyphicon-shopping-cart"></span></a></li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="@Url.Action("DangKy", "User")"><span class=" fade-in-left-button glyphicon glyphicon-user"></span> Sign Up</a></li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="@Url.Action("DangNhap", "User")"><span class=" fade-in-left-button glyphicon glyphicon-log-in"></span> Login</a></li>
                </ul>
            }

        </div>
    </nav>
    <br />

    <div class="container body-content">
        <div class="row">
            <img src="https://thuthuatnhanh.com/wp-content/uploads/2022/06/Anh-sale-dep-nhat.jpg" alt="..." width=50 height=400>
        </div>
        <div class="row">
            <div class="col-3">
                <div>
                    <div>
                        @Html.Action("ChuDePartial", "SachOnline")
                    </div>
                    <br />
                    <div>
                        @Html.Action("NhaXuatBanPartial", "SachOnline")
                    </div>
                </div>
            </div>
            <div class="col-9">
                @RenderBody()
            </div>
        </div>
        <hr />
        <div class="row">
            @Html.Action("SachBanNhieuPartial", "SachOnline")
        </div>
        <hr />

    </div>

    <link href="~/Content/PagedList.css" rel="stylesheet" />
    @RenderSection("scripts", required: false)

</body>
<footer class="text-center" style="background-color:pink">
    <p>&copy; 2021 - Nhà Sách ABC. ALLRight Reserved </p>
    <p>Website được phát triển để sử dụng làm bài tập thực hành môn Lập Trình Web </p>
    <p>Email:abc@gmail.com </p>
</footer>
</html>
