@model SachOnline.Models.KHACHHANG
@{
    ViewBag.Title = "DangKy";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<form action="/User/DangKy" method="post">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
<section class="vh-100 bg-image"
         style="background-image: url('https://businance.com/wp-content/uploads/2019/12/2378649-775x400.jpg'); ">
    <div class="mask d-flex align-items-center min-vh-50 gradient-custom-3 ">
        <div class="container min-vh-50">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                    <div class="card" style="border-radius: 15px;">
                        <div class="card-body p-5">
                            <h2 class="text-uppercase text-center mb-5">Create an account</h2>

                            <form>
                               
                                <div class="form-outline mb-4">
                                    <label class="form-label">Họ Tên</label>
                                    <input type="text" name="HoTen" class="form-control form-control-lg" />
                                    
                                    @Html.ValidationMessageFor(model => model.HoTen, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-outline mb-4">
                                    <label class="form-label">Tài Khoản</label>
                                    <input type="text" name="TaiKhoan" class="form-control form-control-lg" />

                                    @Html.ValidationMessageFor(model => model.Taikhoan, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-outline mb-4">
                                    <label class="form-label">Mật Khẩu</label>
                                    <input type="password" name="Matkhau" class="form-control form-control-lg" />

                                    @Html.ValidationMessageFor(model => model.Matkhau, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-outline mb-4">
                                    <label class="form-label">Nhập Lại Mật Khẩu</label>
                                    <input type="password" name="MatKhauNL" class="form-control form-control-lg" />

                                    @Html.ValidationMessageFor(model => model.MatKhauNL, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-outline mb-4">
                                    <label class="form-label">Email</label>
                                    <input type="email" name="Email" class="form-control form-control-lg" />

                                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-outline mb-4">
                                    <label class="form-label">Địa Chỉ</label>
                                    <input type="text" name="DiaChiKH" class="form-control form-control-lg" />

                                    @Html.ValidationMessageFor(model => model.DiachiKH, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-outline mb-4">
                                    <label class="form-label">SĐT</label>
                                    <input type="tel" name="DienThoaiKH" class="form-control form-control-lg" />

                                    @Html.ValidationMessageFor(model => model.DienthoaiKH, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-outline mb-4">
                                    <label class="form-label">Ngày Sinh</label>
                                    <input type="date" name="NgaySinh" class="form-control form-control-lg" />

                                    @Html.ValidationMessageFor(model => model.Ngaysinh, "", new { @class = "text-danger" })
                                </div>


                                <div class="form-check d-flex justify-content-center mb-5">
                                    <input class="form-check-input me-2" type="checkbox" value="" id="form2Example3cg" />
                                    <label class="form-check-label" for="form2Example3g">
                                        I agree all <a href="#!" class="text-body"></a>
                                    </label>
                                </div>
                                    
                                <div class="d-flex justify-content-center">
                                    <button type="submit" 
                                            class="btn btn-success btn-block btn-lg gradient-custom-4 text-body">
                                        Register
                                    </button>
                                </div>

                                <p class="text-body text-muted mt-5 mb-0">
                                    Have already an account?

                                    <a href="@Url.Action("DangNhap","User")"
                                       class="btn btn-primary fw-bold text-body"><u>Login here</u></a>

                                </p>
                                    </div>

                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
    </form>
