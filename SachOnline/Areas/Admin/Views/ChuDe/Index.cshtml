@model IEnumerable<SachOnline.Models.CHUDE>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<h2>Chủ Đề</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Tên Chủ Đề:
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenChuDe)
            </td>
            <td>

                <a href="@Url.Action("Delete", new { id = item.MaCD })" class="btn btn-danger"> Delete</a>
            </td>
        </tr>
    }

</table>
