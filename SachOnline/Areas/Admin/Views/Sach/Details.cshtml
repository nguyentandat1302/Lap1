@model SachOnline.Models.SACH

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Chi Tiết Sách</h2>

<div>
    <h4>Tên Sách</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
           Tên Sách:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Tensach)
        </dd>

        <dt>
           Giá Bán:
        </dt>

        <dd>
            @Html.FormatValue(@Model.Giaban, "{0:#,##0}") VNĐ
        </dd>

        <dt>
          Mô Tả:
        </dt>

        <dd>
            @Html.Raw(@Model.Mota.ToString().Replace("\n",
                 "</p><p>&nbsp&nbsp&nbsp&nbsp&nbsp"))
        </dd>

        <dt>
            Ảnh bìa:
        </dt>

        <dd>
            <img style="height:200px;width:150px" src= "@Model.Anhbia" alt=" @Model.Tensach"  >
        </dd>

        <dt>
           Ngày cập nhập:
        </dt>

        <dd>
            @Html.FormatValue(@Model.Ngaycapnhat, "{0:dd/MM/yyyy}")
        </dd>

        <dt>
            Số lượng bán:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Soluongton)
        </dd>

        <dt>
            Chủ đề:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CHUDE.TenChuDe)
        </dd>

        <dt>
           Nhà xuất Bản:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MaNXB)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Masach }) |
    @Html.ActionLink("Back to List", "Index")
</p>
