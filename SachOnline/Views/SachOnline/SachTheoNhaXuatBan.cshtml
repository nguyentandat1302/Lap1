
@{
    ViewBag.Title = "SachTheoNhaXuatBan";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2 class="text-center">SÁCH THEO NHÀ XUẤT BẢN </h2>
<hr />
<div class=" row text-center">
    @foreach (var sach in Model)
    {
        <div class="col-sm-4 col-md-4 col-lg-4 col-xs-6">
            <div class="thumbnail">
                <a href="@Url.Action("ChiTietSach", "SachOnline", new { Masach = sach.Masach })">
                    <img src="@sach.Anhbia" alt="">
                </a>
                <div class="caption">
                    <a href="@Url.Action("ChiTietSach","SachOnline", new { Masach = sach.Masach})">@sach.Tensach</a>
                    <hr />
                    <a href="@Url.Action("ChiTietSach","SachOnline", new { Masach = sach.Masach})">@sach.Mota</a>
                    <p>
                        <a href="@Url.Action("ThemGioHang","GioHang",new {Masach = sach.Masach})" class="btn btn-primary">
                            <span class="glyphicon glyphicon-shopping-cart" aria-hidden="true">
                            </span> Add to Cart
                        </a>
                    </p>
                </div>
            </div>
        </div>
    }
</div>
